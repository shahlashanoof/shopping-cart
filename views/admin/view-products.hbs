<section>
    <div class="container">
      <div class="row mt-3">
        <div class="mt-2">
          <a href="\admin\add-product" class="btn btn-success float-start">Add product</a>
        </div>
        <div class="mt-3">
     
        <table class="table mt-5 " id="productsTable">
  <thead>
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      
      <td>{{this.name}}</td>
      <td>{{this.category}}</this></td>
      <td>{{this.description}}</td>
      <td><img style="width: 50px; height:50px "src="/product-images/{{this._id}}.jpeg" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
          <a href="/admin/delete-product/{{this._id}}"  class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.name}}?');">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
        </div>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );


</script>